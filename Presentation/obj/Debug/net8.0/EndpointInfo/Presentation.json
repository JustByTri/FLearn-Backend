                  "Motivation"
                ],
                "type": "object",
                "properties": {
                  "LanguageID": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "Motivation": {
                    "maxLength": 1000,
                    "minLength": 0,
                    "type": "string"
                  },
                  "CredentialFiles": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "format": "binary"
                    }
                  },
                  "CredentialNames": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "CredentialTypes": {
                    "type": "array",
                    "items": {
                      "type": "integer",
                      "format": "int32"
                    }
                  }
                }
              },
              "encoding": {
                "LanguageID": {
                  "style": "form"
                },
                "Motivation": {
                  "style": "form"
                },
                "CredentialFiles": {
                  "style": "form"
                },
                "CredentialNames": {
                  "style": "form"
                },
                "CredentialTypes": {
                  "style": "form"
                }
              }
            }
