using System.ComponentModel.DataAnnotations;
using System.ComponentModel.DataAnnotations.Schema;

namespace DAL.Models;

[Table("Educational")]
public class Educational
{
    [Key]
    public int EducationalId { get; set; }

    [Required]
    [StringLength(200)]
    public string Title { get; set; } = string.Empty;

    [StringLength(1000)]
    public string? Description { get; set; }

    [StringLength(100)]
    public string? Level { get; set; }

    [Range(1, 10)]
    public int? Duration { get; set; }

    [StringLength(50)]
    public string? DurationUnit { get; set; }

    [Column(TypeName = "decimal(18,2)")]
    public decimal? Cost { get; set; }

    public DateTime CreatedAt { get; set; } = DateTime.UtcNow;

    // Navigation properties
    public virtual ICollection<EducationalInformationField> EducationalInformationFields { get; set; } = new List<EducationalInformationField>();
    public virtual ICollection<CourseInformationField> CourseInformationFields { get; set; } = new List<CourseInformationField>();
}
